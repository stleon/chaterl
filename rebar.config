{minimum_otp_vsn, "20.0"}.

{erl_opts, [debug_info,
           {parse_transform, lager_transform}
]}.

{deps, [
        {cowboy, {git, "git://github.com/ninenines/cowboy.git",   {tag,    "2.5.0"}}},
        {lager,  {git, "git://github.com/erlang-lager/lager.git", {tag,    "3.6.7"}}},
        {jiffy,  {git, "git://github.com/davisp/jiffy.git",       {tag,    "0.15.2"}}},
        {bert,   {git, "git://github.com/stleon/bert.erl.git",    {branch, "master"}}}
       ]
}.

{relx, [{release, { chat, "0.0.1" },
         [sasl,
          cowboy,
          lager,
          inets,
          jiffy,
          chat]},

        {sys_config, "./config/sys.config.devel"},
        {vm_args, "./config/vm.args"},

        {dev_mode, true},
        {include_erts, false},

        {extended_start_script, true}]
}.

{profiles, [{prod, [{relx, [{dev_mode, false},
                            {sys_config, "./config/sys.config"},
                            {include_src, false},
                            {include_erts, true}]}]
            }]
}.

{plugins, [rebar3_run]}.